@model ProiectDaw.Models.Comment
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Comment</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Comment</h4>
        <br />

        @Html.HiddenFor(model => model.CommentId)
        @Html.HiddenFor(model => model.BookmarkId)

    <div class="form-group">
        @Html.LabelFor(model => model.CommentBody, new { htmlAttributes = new { @class = "form-control" } })

        @Html.EditorFor(model => model.CommentBody, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(b => b.CommentBody, "", new { @class = "text-danger" })

    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}