@model ProiectDaw.Models.Bookmark
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4>Bookmark</h4>
    <br />

    @Html.HiddenFor(model => model.BookmarkId)

    <div class="form-group">
        @Html.LabelFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(b => b.Title, "", new{ @class = "text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })

        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(b => b.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}